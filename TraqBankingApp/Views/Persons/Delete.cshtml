@model TraqBankingApp.Models.Person
@{
    ViewData["Title"] = "Delete Person";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-danger text-black">
                <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                <h5 class="d-inline mb-0">Delete Person</h5>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-warning mb-4">
                    <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>
                    <strong>Warning:</strong> Are you sure you want to delete this person?
                </div>

                @if (ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle-fill me-2" aria-hidden="true"></i>
                        @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@e.ErrorMessage</div>
                        }
                    </div>
                }

                <dl class="row mb-4">
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-person me-1" aria-hidden="true"></i>
                        Full Name
                    </dt>
                    <dd class="col-sm-8 fw-semibold">@Model.Name @Model.Surname</dd>

                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-card-text me-1" aria-hidden="true"></i>
                        ID Number
                    </dt>
                    <dd class="col-sm-8 fw-semibold">@Model.IdNumber</dd>

                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-bank me-1" aria-hidden="true"></i>
                        Accounts
                    </dt>
                    <dd class="col-sm-8">
                        @if (Model.Accounts.Any())
                        {
                            <span class="badge bg-info">@Model.Accounts.Count account(s)</span>
                        }
                        else
                        {
                            <span class="text-muted">No accounts</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Code" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1" aria-hidden="true"></i>
                            Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1" aria-hidden="true"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>