@{
    ViewData["Title"] = "Login";
}

<style>
    .auth-header {
        position: relative;
        background-image: url('/images/banking.jpg');
        background-size: cover;
        background-position: center;
        overflow: hidden;
    }

    .auth-header-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, rgba(10, 35, 66, 0.95) 0%, rgba(10, 35, 66, 0.88) 100%);
        backdrop-filter: blur(2px);
    }

    .auth-header-content {
        position: relative;
        z-index: 2;
    }
</style>

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7">
        <div class="card shadow-lg border-0 mb-5">
            <div class="card-header auth-header text-white text-center py-4">
                <div class="auth-header-overlay"></div>
                <div class="auth-header-content">
                    <i class="bi bi-box-arrow-in-right text-accent fs-1 mb-3 d-block" aria-hidden="true"></i>
                    <h3 class="mb-0 fw-bold">Welcome Back</h3>
                    <p class="mb-0 small opacity-75 mt-2">Login to your account</p>
                </div>
            </div>
            <div class="card-body p-4 p-md-5">
                <!-- Error Messages -->
                @if (ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>
                        <strong>Login Failed</strong>
                        <ul class="mb-0 mt-2 ps-3">
                            @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@e.ErrorMessage</li>
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Login" method="post">
                    <!-- Username Field -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-person me-1 text-accent" aria-hidden="true"></i>
                            Username
                        </label>
                        <input class="form-control form-control-lg" name="Username" placeholder="Enter your username" required autofocus />
                    </div>

                    <!-- Password Field -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-lock me-1 text-accent" aria-hidden="true"></i>
                            Password
                        </label>
                        <input class="form-control form-control-lg" name="Password" type="password" placeholder="Enter your password" required />
                    </div>

                    <!-- Remember Me -->
                    <div class="mb-4 form-check">
                        <input class="form-check-input" type="checkbox" id="rememberMe">
                        <label class="form-check-label small text-muted" for="rememberMe">
                            Remember me on this device
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-accent btn-lg py-3 fw-semibold">
                            <i class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></i>
                            Login
                        </button>
                    </div>
                </form>
            </div>
            <div class="card-footer bg-light text-center py-3">
                <small class="text-muted">
                    Don't have an account?
                    <a asp-controller="Auth" asp-action="Signup" class="fw-semibold text-decoration-none">
                        Sign up here
                        <i class="bi bi-arrow-right small" aria-hidden="true"></i>
                    </a>
                </small>
            </div>
        </div>

        <div class="text-center text-muted small">
            <i class="bi bi-shield-lock me-1" aria-hidden="true"></i>
            Your connection is secure and encrypted
        </div>
    </div>
</div>