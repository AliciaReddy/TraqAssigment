@model TraqBankingApp.Models.TransactionEntry
@{
    ViewData["Title"] = "Edit Transaction";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-navy text-black">
                <i class="bi bi-pencil me-2" aria-hidden="true"></i>
                <h5 class="d-inline mb-0">Edit Transaction</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Code" />
                    <input type="hidden" asp-for="AccountCode" />
                    <input type="hidden" asp-for="CaptureDate" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="TransactionDate" class="form-label fw-semibold">
                            <i class="bi bi-calendar-event me-1 text-accent" aria-hidden="true"></i>
                            Transaction Date
                        </label>
                        <input asp-for="TransactionDate"
                               class="form-control form-control-lg"
                               type="date"
                               max="@DateTime.Today.ToString("yyyy-MM-dd")"
                               required />
                        <span asp-validation-for="TransactionDate" class="text-danger small"></span>
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                            Cannot be in the future
                        </small>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-calendar-check me-1 text-accent" aria-hidden="true"></i>
                            Capture Date
                        </label>
                        <input type="text" value="@Model.CaptureDate.ToString("dd MMM yyyy HH:mm:ss")" class="form-control form-control-lg" readonly />
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                            Auto-updated on save
                        </small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Amount" class="form-label fw-semibold">
                            <i class="bi bi-currency-dollar me-1 text-accent" aria-hidden="true"></i>
                            Amount
                        </label>
                        <input asp-for="Amount" class="form-control form-control-lg" type="number" step="0.01" required />
                        <span asp-validation-for="Amount" class="text-danger small"></span>
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                            Positive for credit, negative for debit. Cannot be zero.
                        </small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-semibold">
                            <i class="bi bi-card-text me-1 text-accent" aria-hidden="true"></i>
                            Description
                        </label>
                        <input asp-for="Description" class="form-control form-control-lg" required />
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-accent">
                            <i class="bi bi-check-circle me-1" aria-hidden="true"></i>
                            Save Changes
                        </button>
                        <a asp-action="Index" asp-route-accountId="@Model.AccountCode" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1" aria-hidden="true"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}