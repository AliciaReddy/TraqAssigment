@model TraqBankingApp.Models.TransactionEntry
@{
    ViewData["Title"] = "Create Transaction";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-navy text-black">
                <i class="bi bi-plus-circle me-2" aria-hidden="true"></i>
                <h5 class="d-inline mb-0">Create New Transaction</h5>
            </div>
            <div class="card-body p-4">
                @if (ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>
                        <strong>Error:</strong>
                        <ul class="mb-0 mt-2 ps-3">
                            @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@e.ErrorMessage</li>
                            }
                        </ul>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-action="Create" method="post">
                    <input type="hidden" asp-for="AccountCode" />

                    <div class="mb-4">
                        <label asp-for="TransactionDate" class="form-label fw-semibold">
                            <i class="bi bi-calendar-event me-1 text-accent" aria-hidden="true"></i>
                            Transaction Date
                        </label>
                        <input asp-for="TransactionDate"
                               class="form-control form-control-lg"
                               type="date"
                               max="@DateTime.Today.ToString("yyyy-MM-dd")"
                               required />
                        <span asp-validation-for="TransactionDate" class="text-danger small"></span>
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                            Cannot be in the future
                        </small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Amount" class="form-label fw-semibold">
                            <i class="bi bi-currency-dollar me-1 text-accent" aria-hidden="true"></i>
                            Amount
                        </label>
                        <input asp-for="Amount" class="form-control form-control-lg" type="number" step="0.01" required />
                        <span asp-validation-for="Amount" class="text-danger small"></span>
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                            Positive for credit, negative for debit. Cannot be zero.
                        </small>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-semibold">
                            <i class="bi bi-card-text me-1 text-accent" aria-hidden="true"></i>
                            Description
                        </label>
                        <input asp-for="Description" class="form-control form-control-lg" placeholder="Enter transaction description" required />
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-accent">
                            <i class="bi bi-check-circle me-1" aria-hidden="true"></i>
                            Create Transaction
                        </button>
                        <a asp-action="Index" asp-route-accountId="@Model.AccountCode" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1" aria-hidden="true"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}