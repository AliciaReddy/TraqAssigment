@model TraqBankingApp.Models.TransactionEntry
@{
    ViewData["Title"] = "Transaction Details";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0">
                <i class="bi bi-receipt text-accent me-2" aria-hidden="true"></i>
                Transaction Details
            </h2>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Code" class="btn btn-outline-primary">
                    <i class="bi bi-pencil me-1" aria-hidden="true"></i> Edit
                </a>
                <a asp-action="Index" asp-route-accountId="@Model.AccountCode" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1" aria-hidden="true"></i> Back to Transactions
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-navy text-black">
                <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                <h5 class="d-inline mb-0">Transaction Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-credit-card me-2" aria-hidden="true"></i>Account Number
                    </dt>
                    <dd class="col-sm-8">
                        <span class="tb-mono">@Model.Account?.AccountNumber</span>
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-calendar-event me-2" aria-hidden="true"></i>Transaction Date
                    </dt>
                    <dd class="col-sm-8 fw-semibold">
                        @Model.TransactionDate.ToString("dd MMM yyyy")
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-calendar-check me-2" aria-hidden="true"></i>Capture Date
                    </dt>
                    <dd class="col-sm-8 text-muted">
                        @Model.CaptureDate.ToString("dd MMM yyyy HH:mm:ss")
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-currency-dollar me-2" aria-hidden="true"></i>Amount
                    </dt>
                    <dd class="col-sm-8">
                        <span class="fs-4 fw-bold @(Model.Amount >= 0 ? "text-success" : "text-danger")">
                            @(Model.Amount >= 0 ? "+" : "")R @Math.Abs(Model.Amount).ToString("N2")
                        </span>
                    </dd>

                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-card-text me-2" aria-hidden="true"></i>Description
                    </dt>
                    <dd class="col-sm-8 fw-semibold">
                        @Model.Description
                    </dd>
                </dl>
            </div>
            <div class="card-footer bg-light border-0">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@Model.Code">
                    <i class="bi bi-pencil me-1" aria-hidden="true"></i> Edit Transaction
                </a>
                <a class="btn btn-accent" asp-controller="Accounts" asp-action="Details" asp-route-id="@Model.AccountCode">
                    <i class="bi bi-bank me-1" aria-hidden="true"></i> View Account
                </a>
            </div>
        </div>
    </div>
</div>