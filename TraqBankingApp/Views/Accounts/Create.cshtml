@model TraqBankingApp.Models.Account
@{
    ViewData["Title"] = "Create Account";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-navy text-black">
                <i class="bi bi-bank me-2" aria-hidden="true"></i>
                <h5 class="d-inline mb-0">Create New Account</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <input type="hidden" asp-for="PersonCode" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="AccountNumber" class="form-label fw-semibold">
                            <i class="bi bi-credit-card me-1 text-accent" aria-hidden="true"></i>
                            Account Number
                        </label>
                        <input asp-for="AccountNumber" class="form-control form-control-lg" placeholder="Enter account number" required />
                        <span asp-validation-for="AccountNumber" class="text-danger small"></span>
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                            Must be unique. Balance starts at R 0.00
                        </small>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-accent">
                            <i class="bi bi-check-circle me-1" aria-hidden="true"></i>
                            Create Account
                        </button>
                        <a asp-action="Index" asp-route-personId="@Model.PersonCode" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1" aria-hidden="true"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}