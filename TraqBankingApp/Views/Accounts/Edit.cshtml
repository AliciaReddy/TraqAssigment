Accounts\Edit.cshtml
@model TraqBankingApp.Models.Account
@{
    ViewData["Title"] = "Edit Account";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-navy text-black">
                <i class="bi bi-pencil me-2" aria-hidden="true"></i>
                <h5 class="d-inline mb-0">Edit Account</h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Code" />
                    <input type="hidden" asp-for="PersonCode" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="AccountNumber" class="form-label fw-semibold">
                            <i class="bi bi-credit-card me-1 text-accent" aria-hidden="true"></i>
                            Account Number
                        </label>
                        <input asp-for="AccountNumber" class="form-control form-control-lg" required />
                        <span asp-validation-for="AccountNumber" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-semibold">
                            <i class="bi bi-cash-stack me-1 text-accent" aria-hidden="true"></i>
                            Outstanding Balance
                        </label>
                        <input type="text" value="R @Model.OutstandingBalance.ToString("N2")" class="form-control form-control-lg" readonly />
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                            Balance is automatically calculated from transactions
                        </small>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-accent">
                            <i class="bi bi-check-circle me-1" aria-hidden="true"></i>
                            Save Changes
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Code" class="btn btn-outline-secondary">
                            <i class="bi bi-x-circle me-1" aria-hidden="true"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}